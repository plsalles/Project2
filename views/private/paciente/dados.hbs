<section class="container-dados" >
  <div id="dados-user" user="{{paciente._id}}" role="paciente">
    <form id="form-dados-paciente" action="/dados/" method="POST">
      <div>
        <div>
          <label for="name">Nome</label><br>
          <input type="text" name="name" value="{{paciente.name}}">
        </div>
        <div>
          <label for="username">Username</label><br>
          <input type="text" name="username" value="{{userPaciente.username}}" disabled>
        </div>
        <div>
        <label for="password">Senha</label><br>
        <input type="password" name="password" placeholder="Digite a nova senha caso queira trocá-la">
        </div>
        <div>
        <label for="email">Email</label><br>
        <input type="text" name="email" value="{{paciente.email}}">
        </div>
        <div>
        <label for="role">Role</label><br>
        <input type="text" name="role" value="{{userPaciente.role}}" disabled>
        </div>
        <div>
        <label for="cpf">CPF</label><br>
        <input type="text" name="cpf" value="{{paciente.cpf}}">
        </div>
      <div>
      </div>
      <div>
      <h3>Endereço</h3>
      </div>
      <div>
      <label for="logradouro">Logradouro</label><br>
      <input type="text" name="logradouro" value="{{paciente.endereco.logradouro}}">
      </div>
      <div>
      <label for="numero">Numero</label><br>
      <input type="text" name="numero" value="{{paciente.endereco.numero}}">
      </div>
      <div>
      <label for="complemento">Complemento</label><br>
      <input type="text" name="complemento" value="{{paciente.endereco.complemento}}">
      </div>
      <div>
      <label for="bairro">Bairro</label><br>
      <input type="text" name="bairro" value="{{paciente.endereco.bairro}}">
      </div>
      <div>
      <label for="cep">CEP</label><br>
      <input type="text" name="cep" value="{{paciente.endereco.cep}}">
      </div>
      <div>
      <label for="cidade">Cidade</label><br>
      <input type="text" name="cidade" value="{{paciente.endereco.cidade}}">
      </div>
      <div>
        <label  for="estado">Estado</label><br>
        <select id="estados" name="estado" >
        </select>
      </div>
      <button type="submit">Atualizar dados</button>
      </div>
    </form>
    <div>
    {{#if errorMessage}}
      <span>{{errorMessage}}</span>
    {{/if}}
  </div>
</div>
<div>
  
    <table>
      <tbody >
        <tr >
          <td class="dados-medicos-paciente" ><b>Medicos Paciente</b>  </td>
        </tr>
        {{#each paciente.medicos}}
        <form action="/dados/remove-medico/{{this._id}}" method="GET">
          <tr>
            <td class="dados-medicos-paciente">{{this.name}} - {{this.especializacao}} <button type="submit">Remover</button></td>
          </tr>
        </form>
        {{/each}}
        
      </tbody>
    </table>


    <h3><i>Adicionar novo Médico</i></h3>
    <form  action="/dados/novo-medico" method="POST">
      <input type="text" id="medico-name" name="medico" placeholder="Digite o nome do médico de confiança">
      <button id="procura-medico" type="button">Procurar Médico</button>
      <p id="msg-procura-medico" style='color:red'></p>
      <div id ="medico-select-div"></div>
      <button  type="submit">Adicionar</button>
      </div>
      <div>

      </div>

    </form>
    </div>
  </div>
</section>
